/* Transmitter code
 * Install the NRF24 library to your IDE
 * Upload this code to the Arduino UNO, NANO, Pro mini (5V,16MHz)
 * Connect a NRF24 module to it:
 
    NRF Module --> Arduino UNO,NANO
    
    GND    ->   GND
    Vcc    ->   3.3V
    CE     ->   D9
    CSN    ->   D10
    CLK    ->   D13
    MOSI   ->   D11
    MISO   ->   D12

  
*/



#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

// RF24 setup
RF24 radio(9, 10); // CE, CSN
const byte address[6] = "00001";

// Joystick pins
const int xPin = A2;
const int yPin = A1;

// Status LEDs
#define RED_LED    5   // Signal lost
#define GREEN_LED  6   // Signal OK

void setup() {
  Serial.begin(9600);
  pinMode(RED_LED, OUTPUT);
  pinMode(GREEN_LED, OUTPUT);
  digitalWrite(RED_LED, HIGH);    // Assume no signal at start
  digitalWrite(GREEN_LED, LOW);
  radio.begin();
  radio.openWritingPipe(address);
  radio.setPALevel(RF24_PA_MIN);
  radio.stopListening(); // Transmitter mode
}

void loop() {
  int xAxis = analogRead(xPin); // 0–1023
  int yAxis = analogRead(yPin); // 0–1023

  // Format: "x,y"
  char payload[32];
  snprintf(payload, sizeof(payload), "%d,%d", xAxis, yAxis);

  // Send data
  bool txOK = radio.write(&payload, strlen(payload) + 1);

  if (txOK) {
    // Signal established
    digitalWrite(GREEN_LED, HIGH);
    digitalWrite(RED_LED, LOW);
  } else {
    // Signal lost
    digitalWrite(GREEN_LED, LOW);
    digitalWrite(RED_LED, HIGH);
  }

  // Debug
  Serial.println(payload);

  delay(20); // ~50 Hz update
}
